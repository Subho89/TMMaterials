<Window x:Class="TMMaterials.Views.DefineMaterials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TMMaterials.ViewModel"
        Title="Define Materials" Height="358" Width="500" 
        Background="#F0F0F0" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:DefineMaterialsVM />
    </Window.DataContext>

    <Border Padding="15" BorderBrush="#CCCCCC" BorderThickness="1" Margin="10" Background="White" CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Materials" Grid.Column="0" Margin="5" Foreground="Blue">
                <ListBox x:Name="MaterialsList" 
                         ItemsSource="{Binding Materials}" 
                         SelectedItem="{Binding SelectedMaterial}"
                         Margin="5" BorderThickness="1" BorderBrush="#AAAAAA">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding MaterialGrade}" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding MaterialName}" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <StackPanel Grid.Column="1" Margin="10,5,5,5">
                <TextBlock Text="Click to:" Margin="0,0,0,10" Foreground="Blue" />

                <Button Content="Add New Material..." Command="{Binding AddMaterialCommand}" Margin="0,2" Padding="5"/>
                <Button Content="Add Copy of Material..." Command="{Binding CopyMaterialCommand}" Margin="0,2" Padding="5"/>
                <Button Content="Modify/Show Material..." Command="{Binding ModifyMaterialCommand}" Margin="0,2" Padding="5"/>
                <Button Content="Delete Material" Command="{Binding DeleteMaterialCommand}" Margin="0,2" Padding="5"/>

                <CheckBox Content="Show Advanced Properties" IsChecked="{Binding ShowAdvanced}" Margin="0,20,0,0" VerticalAlignment="Center"/>

                <StackPanel Orientation="Vertical" Margin="0,30,0,0">
                    <Button Content="OK" IsDefault="True" Command="{Binding OkCommand}" Width="80" HorizontalAlignment="Right" Margin="0,5"/>
                    <Button Content="Cancel" IsCancel="True"  Width="80" HorizontalAlignment="Right" Margin="0,5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>