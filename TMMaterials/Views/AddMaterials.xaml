<Window x:Class="TMMaterials.Views.AddMaterials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TMMaterials.ViewModel"
        Title="Add Material Property" Height="300" Width="450"
        Background="#F0F0F0" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">


    <!--<Window.DataContext>
        <vm:AddMaterialsVM />
    </Window.DataContext>-->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#DCDCDC" BorderThickness="1" Padding="20" Background="White" CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Region" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5" ItemsSource="{Binding Regions}" DisplayMemberPath="RegionName" SelectedItem="{Binding SelectedRegion}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Material Type" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,5" ItemsSource="{Binding MaterialTypes}" DisplayMemberPath="TypeName" SelectedItem="{Binding SelectedType}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Standard" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,5"
          ItemsSource="{Binding Standards}" 
          SelectedItem="{Binding SelectedStandard}"
          DisplayMemberPath="StandardName" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,5" ItemsSource="{Binding Grades}" DisplayMemberPath="MaterialGrade" SelectedItem="{Binding SelectedGrade}"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Command="{Binding OkCommand}" Width="80" Height="28" Margin="5,0" IsDefault="True" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Height="28" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>